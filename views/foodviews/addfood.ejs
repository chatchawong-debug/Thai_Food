<%- include('../partials/header') %>
<div class="container">
  <div class="py-3">
    <a class="btn btn-primary mb-3" href="/food"><- back</a>
    <h2><%= title %></h2>
    <h2><%= message %></h2>
    <hr />
    <form method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="first_name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          aria-describedby="first_name"
          placeholder="Name"
          required
        />
      </div>
      <div class="mb-3">
        <label for="dres" class="form-label">Description</label>
        <input
          type="text"
          class="form-control"
          name="dres"
          aria-describedby="dres"
          placeholder="Description"
          required
        />
      </div>
      <div class="mb-3">
        <label>Type</label>
        <select name="type">
          <% foodtype.forEach(t => { %>
          <option value="<%= t.type_id %>"><%= t.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-12 mb-3">
        <label for="food image">Image</label>
        <input type="file" class="form-control" name="image" required />
      </div>
      <button type="submit" class="btn btn-success">Add</button>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>